{
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "bun": ">=1.0.0 <2.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf -g ./packages/*/{build,dist} **/.tsbuildinfo",
    "build": "tsc -b tsconfig.build.json && pnpm --recursive --parallel run build",
    "lint": "pnpm lint-build && eslint",
    "lint-fix": "pnpm lint --fix",
    "lint-build": "bun eslint.build.ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.1",
    "@babel/plugin-transform-export-namespace-from": "^7.24.1",
    "@babel/plugin-transform-modules-commonjs": "^7.24.1",
    "@effect/build-utils": "^0.7.6",
    "@effectify/eslint-config": "workspace:*",
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/js": "^9.0.0",
    "@stylistic/eslint-plugin": "^1.7.2",
    "@types/bun": "^1.1.0",
    "@types/node": "^20.12.7",
    "@typescript-eslint/parser": "^7.7.0",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "eslint": "^9.0.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5"
  },
  "pnpm": {
    "patchedDependencies": {
      "eslint-plugin-import@2.29.1": "patches/eslint-plugin-import@2.29.1.patch",
      "eslint-config-airbnb-base@15.0.0": "patches/eslint-config-airbnb-base@15.0.0.patch",
      "import-fresh@3.3.0": "patches/import-fresh@3.3.0.patch",
      "eslint@9.0.0": "patches/eslint@9.0.0.patch"
    }
  }
}
