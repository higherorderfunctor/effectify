{
  "name": "@effectify/eslint-config",
  "version": "0.0.0",
  "type": "module",
  "license": "Apache-2.0",
  "description": "ESlint configuration for effectify",
  "homepage": "https://github.com/higherorderfunctor/effectify#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/higherorderfunctor/effectify.git",
    "directory": "packages/eslint-config"
  },
  "bugs": {
    "url": "https://github.com/higherorderfunctor/effectify/issues"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist",
    "provenance": false
  },
  "scripts": {
    "codegen": "build-utils prepare-v2",
    "build": "pnpm codegen && pnpm build-esm && pnpm build-cjs && pnpm build-annotate && build-utils pack-v2",
    "build-esm": "tsc -b tsconfig.build.json",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-annotate": "babel build --plugins annotate-pure-calls --out-dir build --source-maps",
    "check": "tsc -b tsconfig.json"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/js": "^9.0.0",
    "@stylistic/eslint-plugin": "^1.7.0",
    "@types/eslint": "^8.56.9",
    "@types/eslint__eslintrc": "^2.1.1",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^9.0.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1"
  },
  "peerDependencies": {
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/js": "^9.0.0",
    "@stylistic/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^9.0.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1"
  },
  "effect": {
    "generateExports": {
      "include": [
        "*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "*.ts"
      ]
    }
  }
}
